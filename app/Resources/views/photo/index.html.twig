{% extends 'base.html.twig' %}

{% block body %}
    <h1>Photos list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for photo in photos %}
            <tr>
                <td>{{ photo.name }}</td>
                <td><img src="{{ photo.photoURL }}"/></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('photo_show', { 'id': photo.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('photo_edit', { 'id': photo.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('photo_new', { 'id': gallery.id }) }}">Create a new photo</a>
        </li>
    </ul>
{% endblock %}
